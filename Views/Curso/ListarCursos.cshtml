@model List<Curso>

@{   
    Layout = "_Layout";
    ViewData["Title"] = "LISTA DE CURSOS";
}


<div class="container mt-5">

 <h1 class="text-center">@ViewData["Tittle"]</h1>

 <div class="mt-3">
   
    <a class="btn btn-warning" asp-controller="Curso" asp-action="RegistrarCurso">Nueva Curso</a>

 </div>

  <br>

<table class="table table-striped table-hover">  

  <thead class="table-dark">
    <tr>  
        <th> Codigo </th> 
        <th> Nombre </th>
        <th> Fecha de Inicio </th>
        <th> Fecha de fin </th>
        <th> Horario </th>
        <th> Cupo </th>
        <th>Profesor</th>
        <th>Precio</th>
        <th>Imagenes</th>
        <th> Editar </th>
        <th> Eliminar </th>
          
    </tr>  

    </thead>
  
  <tbody>

@foreach (var item in Model) {  
    <tr>  
          
         <td> @Html.DisplayFor(modelItem => item.Id) </td>  
         <td> @Html.DisplayFor(modelItem => item.nombre) </td>
         <td> @Html.DisplayFor(modelItem => item.fechaInicio) </td>
         <td> @Html.DisplayFor(modelItem => item.fechaFin) </td>
         <td> @Html.DisplayFor(modelItem => item.horario) </td>
         <td> @Html.DisplayFor(modelItem => item.cupo) </td>
         <td> @Html.DisplayFor(modelItem => item.usuario.nombres) </td>
         <td> @Html.DisplayFor(modelItem => item.precio) </td>
         <td> <img src="data:image/png;base64,@item.fileBase64" /> </td>
         <td> <a class="btn btn-info" asp-controller="Curso" asp-action="EditarCurso" asp-route-id="@item.Id">Editar</a> </td>   
         <td> <a class="btn btn-danger" asp-controller="Curso" asp-action="EliminarCurso" asp-route-id="@item.Id" >Eliminar</a></td> 
         
    </tr>  
}  

 </tbody>
  
</table> 

</div>
